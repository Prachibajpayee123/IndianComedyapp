<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ramya.vik.manya">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-sdk android:minSdkVersion="11"></uses-sdk>
    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@drawable/unanmed"
        android:label="@string/app_name"
        android:supportsRtl="true"
        >
        <activity
            android:name="com.ramya.vik.manya.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service android:name=".MyFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity android:name="com.ramya.vik.manya.newp"

            android:theme="@style/AppThememain"></activity>
        <activity android:name="com.ramya.vik.manya.Aboutus"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.ramya.vik.manya.Beingidian" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.ramya.vik.manya.MostViewed" android:theme="@style/AppTheme"></activity>

        <activity android:name="com.ramya.vik.manya.Oneactivity"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.ramya.vik.manya.Notify"
            android:theme="@style/AppTheme"></activity>
        <activity android:name="com.ramya.vik.manya.newppdkks"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemevid"></activity>
        <activity android:name="com.ramya.vik.manya.download2"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemevid"></activity>
        <activity android:name="com.ramya.vik.manya.downloadnewp"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppThemevid"></activity>
    </application>


</manifest>